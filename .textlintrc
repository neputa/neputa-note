{
  "plugins": {
    "mdx": true,
    "@textlint/text": {
      "extensions": [
        ".html"
      ]
    }
  },
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-jtf-style": {
      "1.1.3.箇条書き": false,
      "2.2.1.ひらがなと漢字の使い分け": true,
      "3.1.1.全角文字と半角文字の間": false,
      "4.2.9.ダッシュ(-)": false,
      "3.1.2.全角文字どうし": false
    }
  }
}
