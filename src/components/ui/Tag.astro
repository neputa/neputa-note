---
import { getPermalink } from '@/utils'

export interface Props {
  tag: string
}
const { tag } = Astro.props
---

<a href={getPermalink(tag.toLowerCase(), 'tag')} aria-label={tag}>
  <span
    class='w-fit rounded-sm bg-gray-300 px-3 py-2 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300 md:px-5 md:py-2'
  >
    #{tag ?? 'Blog Tag'}
  </span>
</a>
